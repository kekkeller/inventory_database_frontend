  "scripts": {
    "dev": "vite",
    "build": "vite build && npm run copyCSS && npm run generateTypes",
    "generateTypes": "vue-tsc --declaration --emitDeclarationOnly --skipLibCheck",
    "copyCSS": "copyfiles -u 2 \"./src/components/**/*.css\" \"./dist/src/components/\"",
    "test": "jest tests --passWithNoTests",
    "unit": "jest tests/components --collectCoverage --passWithNoTests",
    "lint": "eslint ./src/**/*.{ts,js,vue}",
    "storybook": "storybook dev -p 6006 --quiet --disable-telemetry --https --ssl-cert docker/storybook.crt --ssl-key docker/storybook.key",
    "storybook-docker": "storybook dev -p 443 --no-open --quiet --disable-telemetry --https --ssl-cert docker/storybook.crt --ssl-key docker/storybook.key",
    "build-storybook": "storybook build"
  },
